<header data-controller="toggle">
  <nav class="p-3 border-gray-200 bg-gray-50 dark:bg-gray-800 dark:border-gray-700 navbar">
    <div class="container flex flex-wrap items-center justify-between mx-auto">
      <button type="button" class="inline-flex items-center p-2 ml-3 text-sm text-gray-500 rounded-lg md:hidden  focus:outline-none dark:text-gray-400 menu-btn" data-action="click->toggle#menu">
        <%= image_tag("menu-regular-24.png") %>
      </button>
      <%= link_to "PlanB", categories_path , class: "self-center text-xl font-semibold whitespace-nowrap dark:text-white text-left w-[55%]" %>

      <div class="mini-header text-slate-500 font-semibold">
        <% if current_page?(categories_path)%>
          <h2>Categories</h2>
        <% else %>
          <h2>Transactions</h2>
        <% end %>
      </div>
      
      <div data-toggle-target="menu" class="menu hidden">
        <ul class="flex flex-col mt-4 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-transparent dark:bg-gray-800 md:dark:bg-transparent dark:border-gray-700 text-left w-full text-xl">
          <li>
            <%= link_to 'Home', categories_path, class: "block py-4 text-white border border-transparent border-b-white" %>
          </li>
          <li>
            <%= link_to 'Transactions', categories_path, class: "block py-4 pt-6 text-white border border-transparent border-b-white" %>
          </li>
          <li class="flex space-b">
            <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "text-white font-medium py-4 pt-6" %>
            <%= image_tag("arrow-r.svg", class: "pt-1.5 w-7")%>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>




