<%= link_to category_path(category.id), class: "flex flex-col items-center bg-white border rounded-lg shadow-md md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700" do %>
  <div id="<%= dom_id category %>">
  <p class="my-5">
    <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= category.name %></h2>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Icon:</strong>
    <%= image_tag(category.icon_resize, class: "object-cover w-full rounded-t-lg h-96 md:rounded-none md:rounded-l-lg") %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total Transactions:</strong>
    <%= category.procedures.length %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "See all transactions", category_path(category.id), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this category', edit_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
  </div>
<% end %>


